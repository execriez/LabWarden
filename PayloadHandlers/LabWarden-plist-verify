#!/bin/bash
#
# Short:    Payload Handler Script - verify that a .LabWarden.plist payload is installed OK
# Author:   Mark J Swift
# Version:  1.0.90
# Modified: 01-Jul-2016
#
# Called as follows:    
#   LabWarden-plist-verify <somefile.LabWarden.plist> [user]
#
# Without a user specified, verifies for the workstation.
# With a user, verifies for the specified user.

# ---

# Load the library, only if it is not already loaded
if test -z "${LW_sv_LabWardenVersion}"
then
  . /usr/local/LabWarden/lib/CommonLib
fi

# ---

sv_PayloadFilePath="${1}"

if test -z "${sv_PayloadFilePath}"
then
  LW_nf_QuickExit "Usage ${LW_sv_ThisScriptFileName} somefile.LabWarden.plist"
fi

if ! test -e "${sv_PayloadFilePath}"
then
  LW_nf_QuickExit "File not found - ${sv_PayloadFilePath}"
fi

# ---

sv_GPOuser="${2}"

if test -n "${sv_GPOuser}"
then
  sv_ConfigDirPath="${LW_sv_ConfigDirPath}/${sv_GPOuser}"
  
else
  sv_ConfigDirPath="${LW_sv_ConfigDirPath}/${LW_sv_ADComputerName}"
  
fi
mkdir -p "${sv_ConfigDirPath}"

# ---

# Verify the LabWarden.plist config
sv_ObjectName=$(/usr/libexec/PlistBuddy 2>/dev/null -c "Print ':Name'" "${sv_PayloadFilePath}")
sv_ObjectType=$(/usr/libexec/PlistBuddy 2>/dev/null -c "Print ':Type'" "${sv_PayloadFilePath}")

case "${sv_ObjectType}" in
Printer)
  # Verify the printer
  sv_PrinterDesc=$(echo $sv_ObjectName | tr " " "_")
  sv_PrinterName=$(echo $sv_PrinterDesc | tr "-" "_")
  if test -z "$(lpstat 2>/dev/null -a | cut -d" " -f1 | grep -E "^${sv_PrinterName}$")"
  then
    LW_nf_QuickExit "Config "$(basename ${sv_PayloadFilePath})" is not correctly installed"

  fi
  ;;

Policy)
  sv_PolicyFilePath="/usr/local/LabWarden/Policies/custom/${sv_ObjectName}"
  if ! test -e "${sv_PolicyFilePath}"
  then
    sv_PolicyFilePath="/usr/local/LabWarden/Policies/${sv_ObjectName}"
    if ! test -e "${sv_PolicyFilePath}"
    then
      sv_PolicyFilePath=""
    fi
  fi
  if test -n "${sv_PolicyFilePath}"
  then
    sv_PolicyVersion="$(${sv_PolicyFilePath})"
  else
    LW_nf_QuickExit "Policy script ${sv_ObjectName} is no longer installed"
  fi
  sv_ObjectPolicyVersion=$(/usr/libexec/PlistBuddy 2>/dev/null -c "Print ':${sv_ObjectName}:LocalPrefs:Version'" "${sv_ConfigDirPath}/LabWarden.plist")
  if [ "${sv_ObjectPolicyVersion}" != "${sv_PolicyVersion}" ]
  then
    LW_nf_QuickExit "Policy ${sv_ObjectName} version has changed from '${sv_ObjectPolicyVersion}' to '${sv_PolicyVersion}'"
  fi

  ;;
  
esac

# Remove temporary files
srm -fR "${LW_sv_ThisScriptTempDirPath}"

exit 0
